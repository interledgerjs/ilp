{
  "name": "ilp",
  "version": "14.0.0",
  "description": "ILP client library for sending and receiving payments",
  "main": "build/lib/index.js",
  "types": "build/lib/index.d.ts",
  "files": [
    "src/lib/**/*.ts",
    "build/lib/**/*.js",
    "build/lib/**/*.js.map",
    "build/lib/**/*.d.ts",
    "build/doc"
  ],
  "scripts": {
    "clean": "rm -Rf .nyc_output && rm -Rf coverage && rm -Rf doc && rm -Rf build ",
    "build": "tsc",
    "lint": "tslint --project .",
    "pretest": "tsc --build",
    "test": "nyc mocha --ui mocha-typescript --require source-map-support/register --recursive dist/test",
    "doc": "typedoc --options typedoc.js src/lib/index.ts",
    "codecov": "codecov",
    "preversion": "npm run lint && npm test",
    "version": "git add -A src",
    "postversion": "git push && git push --tags",
    "prepublishOnly": "npm run lint && npm test && npm run doc"
  },
  "engines": {
    "node": ">=8"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/interledgerjs/ilp.git"
  },
  "keywords": [
    "interledger",
    "ilp",
    "payment request",
    "crypto",
    "condition",
    "payments"
  ],
  "author": "Interledger Team <info@interledger.org>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/interledgerjs/ilp/issues"
  },
  "homepage": "https://github.com/interledgerjs/ilp#readme",
  "dependencies": {
    "@types/agent-base": "^4.2.0",
    "@types/base64-url": "^2.2.0",
    "agent-base": "^4.2.1",
    "base64-url": "^2.2.0",
    "bignumber.js": "^7.2.1",
    "debug": "^4.0.1",
    "ilp-module-loader": "^0.3.2",
    "ilp-packet": "^3.0.0",
    "ilp-plugin-btp": "^1.3.2",
    "ilp-protocol-ildcp": "^2.0.0",
    "ilp-protocol-stream": "^1.8.0",
    "supports-color": "^5.5.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/chai-as-promised": "^7.1.0",
    "@types/debug": "0.0.30",
    "@types/express": "^4.16.0",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.9.4",
    "@types/node-fetch": "^2.1.2",
    "@types/sax": "^1.0.1",
    "@types/sinon": "^5.0.1",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "codecov": "^3.0.2",
    "five-bells-integration-test-loader": "^1.5.3",
    "mocha": "^5.2.0",
    "mocha-typescript": "^1.1.14",
    "nyc": "^12.0.2",
    "sax": "^1.2.4",
    "sinon": "^6.0.1",
    "source-map-support": "^0.5.9",
    "tslint": "^5.11.0",
    "tslint-config-standard": "^8.0.1",
    "typedoc": "^0.12.0",
    "typescript": "^3.0.3"
  },
  "config": {
    "five-bells-integration-test-loader": {
      "module": "five-bells-integration-test",
      "repo": "interledgerjs/five-bells-integration-test"
    }
  },
  "nyc": {
    "check-coverage": true,
    "lines": 80,
    "statements": 80,
    "functions": 80,
    "branches": 80,
    "include": [
      "build/lib/**/*.js"
    ],
    "exclude": [
      "build/test/**/*.js"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "all": true
  }
}
