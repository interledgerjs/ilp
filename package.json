{
  "name": "ilp",
  "version": "3.0.0",
  "description": "ILP client library for sending and receiving payments",
  "main": "index.js",
  "scripts": {
    "lint": "eslint src/**/*.js",
    "test": "istanbul test -- _mocha",
    "docs:api": "jsdoc2md --global-index-format none \"src/**/*.js\" --template docs/README.template.md > docs/README.intermediate.md",
    "docs:toc": "md-toc-filter docs/README.intermediate.md > README.md",
    "docs": "npm run docs:api && npm run docs:toc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/interledger/js-ilp.git"
  },
  "keywords": [
    "interledger",
    "ilp",
    "interactive",
    "itp",
    "crypto",
    "condition",
    "five-bells-condition",
    "crypto condition",
    "payments"
  ],
  "author": "Interledger Team <info@interledger.org>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/interledger/js-ilp/issues"
  },
  "homepage": "https://github.com/interledger/js-ilp#readme",
  "dependencies": {
    "canonical-json": "0.0.4",
    "debug": "^2.2.0",
    "eventemitter2": "^2.0.0",
    "five-bells-condition": "^3.2.0",
    "ilp-core": "^4.1.0",
    "moment": "^2.14.1",
    "node-uuid": "^1.4.7"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "chai-as-promised": "^5.3.0",
    "co-mocha": "^1.1.2",
    "cz-conventional-changelog": "^1.1.6",
    "eslint": "^3.1.1",
    "eslint-config-standard": "^5.3.5",
    "eslint-plugin-promise": "^2.0.0",
    "eslint-plugin-standard": "^2.0.0",
    "ghooks": "^1.3.2",
    "istanbul": "^0.4.4",
    "jsdoc-to-markdown": "^1.3.6",
    "lodash": "^4.13.1",
    "md-toc-filter": "^0.9.0",
    "mocha": "^2.5.3",
    "mock-require": "^1.3.0",
    "sinon": "^1.17.4",
    "sinon-as-promised": "^3.0.1",
    "sinon-chai": "^2.8.0",
    "timekeeper": "^0.1.1",
    "validate-commit-msg": "^2.6.1"
  },
  "config": {
    "ghooks": {
      "commit-msg": "validate-commit-msg"
    },
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
